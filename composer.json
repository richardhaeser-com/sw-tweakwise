{
  "name": "richardhaeser/sw-tweakwise",
  "description": "Tweakwise for Shopware 6",
  "type": "shopware-platform-plugin",
  "license": "proprietary",
  "version": "5.5.1",
  "autoload": {
    "psr-4": {
      "RH\\Tweakwise\\": "src/",
      "RH\\Tweakwise\\Tests\\": "tests/"
    }
  },
  "require": {
    "shopware/core": ">=6.7.0 <=6.7.999",
    "shopware/administration": "*",
    "shopware/storefront": "*",
    "dragonmantank/cron-expression": "^3.3"
  },
  "extra": {
    "shopware-plugin-class": "RH\\Tweakwise\\RhaeTweakwise",
    "plugin-icon": "src/Resources/config/plugin.png",
    "copyright": "richardhaeser.com",
    "description": {
      "de-DE": "Integrate Tweakwise in Shopware 6. Use the search and merchandise features of Tweakwise to enhance your webshop. This will integrate the JavaScript version of Tweakwise.",
      "en-GB": "Integrate Tweakwise in Shopware 6. Use the search and merchandise features of Tweakwise to enhance your webshop. This will integrate the JavaScript version of Tweakwise.",
      "nl-NL": "Integreer Tweakwise in Shopware 6. Gebruik de zoek en merchandise functies van Tweakwise om je webshop te verbeteren. Dit zal de JavaScript versie van Tweakwise in je shop integreren."
    },
    "label": {
      "de-DE": "Tweakwise fÃ¼r Shopware 6",
      "en-GB": "Tweakwise for Shopware 6",
      "nl-NL": "Tweakwise voor Shopware 6"
    },
    "manufacturerLink": {
      "de-DE": "https://www.richardhaeser.com",
      "en-GB": "https://www.richardhaeser.com",
      "nl-NL": "https://www.richardhaeser.com"
    },
    "supportLink": {
      "de-DE": "https://www.tweakwise.com",
      "en-GB": "https://www.tweakwise.com",
      "nl-NL": "https://www.tweakwise.com"
    }
  },
  "authors": [
    {
      "name": "richardhaeser.com",
      "homepage": "https://www.richardhaeser.com"
    }
  ],
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "friendsofphp/php-cs-fixer": "^3.0",
    "overtrue/phplint": "^9.3",
    "phpunit/phpunit": "^10.5",
    "captainhook/captainhook": "^5.27"
  },
  "config": {
    "allow-plugins": {
      "symfony/runtime": true
    }
  },
  "scripts": {
    "phpstan": "php -d memory_limit=-1 vendor/bin/phpstan analyse --configuration phpstan.neon --debug",
    "cgl": "php -d memory_limit=-1 vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php --dry-run --using-cache=no --diff",
    "phplint": "php -d memory_limit=-1 vendor/bin/phplint --configuration=.phplint.yml",

    "test": [
      "@phpstan",
      "@cgl",
      "phplint"
    ]
  }
}
