<category>
    {% if not elementId %}
        {% set elementId %}{{ md5(category.id ~ '_' ~ domainId) }}{% endset %}
    {% endif %}
    {% if not parentElementId and category.parentId %}
        {% set parentElementId %}{{ md5(category.parentId ~ '_' ~ domainId) }}{% endset %}
    {% endif %}

    <categoryid>{{ elementId }}</categoryid>
    <name>{{ category.translated.name }}</name>
    <rank>{{ rank }}</rank>

    {% if parentElementId %}
    <parents>
        <categoryid>{{ parentElementId }}</categoryid>
    </parents>
    {% endif %}
</category>
